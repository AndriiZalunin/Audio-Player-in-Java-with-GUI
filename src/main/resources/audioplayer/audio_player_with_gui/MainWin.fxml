<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.Slider?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.text.Font?>

<AnchorPane fx:id="anchorpane" onMouseDragged="#dragged" onMousePressed="#pressed" prefHeight="340.0" prefWidth="730.0" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="audioplayer.audio_player_with_gui.MainController">
   <children>
      <Pane layoutX="19.0" layoutY="200.0" prefHeight="42.0" prefWidth="150.0">
         <children>
            <Label prefHeight="18.0" prefWidth="150.0" text="Volume" />
            <Slider fx:id="volumeSlider" layoutY="28.0" prefHeight="14.0" prefWidth="150.0" value="100.0" />
         </children>
      </Pane>
      <Label fx:id="nameLabel" alignment="CENTER" layoutY="64.0" prefHeight="3.0" prefWidth="530.0" text="Song name">
         <font>
            <Font size="30.0" />
         </font>
      </Label>
      <Pane fx:id="ControlPanel" layoutX="169.0" layoutY="140.0" prefHeight="48.0" prefWidth="192.0">
         <children>
            <Button fx:id="lastButton" mnemonicParsing="false" onAction="#last" prefHeight="48.0" prefWidth="48.0" text="⏮">
               <font>
                  <Font size="20.0" />
               </font>
            </Button>
            <Button fx:id="M_nextButton" layoutX="144.0" mnemonicParsing="false" onAction="#next" prefHeight="48.0" prefWidth="48.0" text="⏭">
               <font>
                  <Font size="20.0" />
               </font>
            </Button>
            <Button fx:id="play_pauseButton" layoutX="72.0" mnemonicParsing="false" onAction="#play_pause" prefHeight="48.0" prefWidth="48.0" text="▶">
               <font>
                  <Font name="System Bold" size="20.0" />
               </font>
            </Button>
         </children>
      </Pane>
      <Pane layoutY="106.0" prefHeight="15.0" prefWidth="530.0" AnchorPane.topAnchor="106.0">
         <children>
            <Label fx:id="end_timeLabel" alignment="CENTER_RIGHT" layoutX="500.0" prefHeight="15.0" prefWidth="24.0" text="0:00">
               <font>
                  <Font size="10.0" />
               </font>
            </Label>
            <Label fx:id="current_timeLabel" layoutX="6.0" prefHeight="15.0" prefWidth="24.0" text="0:00">
               <font>
                  <Font size="10.0" />
               </font>
            </Label>
            <Slider fx:id="song_progressSlider" layoutX="40.0" layoutY="1.0" onMouseDragged="#progress_slider" onMousePressed="#progress_slider" prefHeight="14.0" prefWidth="450.0" />
         </children>
      </Pane>
      <Pane layoutX="440.0" layoutY="194.0" prefHeight="53.0" prefWidth="75.0">
         <children>
            <ComboBox fx:id="speedComboBox" layoutY="28.0" prefHeight="25.0" prefWidth="75.0" promptText="100%" />
            <Label alignment="CENTER_RIGHT" prefHeight="18.0" prefWidth="75.0" text="Speed" />
         </children>
      </Pane>
      <ListView fx:id="playlistListView" focusTraversable="false" layoutX="530.0" layoutY="64.0" prefHeight="270.0" prefWidth="200.0" />
      <Label fx:id="playlistNameLabel" alignment="CENTER" layoutX="530.0" layoutY="34.0" prefHeight="30.0" prefWidth="200.0" text="Playlist name">
         <font>
            <Font size="18.0" />
         </font>
      </Label>
      <Button layoutX="6.0" layoutY="35.0" mnemonicParsing="false" onAction="#switchToSelectingPage" prefHeight="30.0" prefWidth="60.0" text="Exit" />
      <Pane prefHeight="30.0" prefWidth="730.0">
         <children>
            <Label layoutX="44.0" layoutY="6.0" prefHeight="17.0" prefWidth="97.0" text="Audio Player">
               <font>
                  <Font size="13.0" />
               </font>
            </Label>
            <ImageView fx:id="icon" fitHeight="20.0" fitWidth="20.0" layoutX="14.0" layoutY="5.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../../icon.png" />
               </image>
            </ImageView>
            <Button fx:id="closeButton" layoutX="680.0" mnemonicParsing="false" onAction="#close" prefHeight="30.0" prefWidth="50.0" text="❌" />
            <Button fx:id="minimizeButton" layoutX="630.0" mnemonicParsing="false" onAction="#minimize" prefHeight="30.0" prefWidth="50.0" text="➖" />
         </children>
      </Pane>
   </children>
</AnchorPane>
