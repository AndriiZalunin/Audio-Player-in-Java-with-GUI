         <font>
            <Font size="18.0" />
         </font>
      </Label>
      <Button fx:id="deleteButton" disable="true" layoutX="230.0" layoutY="237.0" mnemonicParsing="false" onAction="#delete" prefHeight="40.0" prefWidth="40.0" text="❌">
         <font>
            <Font size="16.0" />
         </font>
      </Button>
      <Button fx:id="addButton" disable="true" layoutX="230.0" layoutY="187.0" mnemonicParsing="false" onAction="#add" prefHeight="40.0" prefWidth="40.0" text="⬅">
